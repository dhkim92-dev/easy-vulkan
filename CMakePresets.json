{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default configure (EV_DEBUG_LEVEL=1)",
      "description": "Configure with EV_DEBUG_LEVEL=1",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "EV_DEBUG_LEVEL": "1",
        "BUILD_TESTS": "OFF",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "debug",
      "displayName": "Configure with EV_LOG_LEVEL=0",
      "description": "Configure with EV_LOG_LEVEL=0",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "EV_LOG_LEVEL": "0",
        "BUILD_TESTS": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
        "name": "test",
        "displayName": "Test configure (EV_LOG_LEVEL=0, BUILD_TESTS=ON)",
        "description": "Configure for testing with EV_LOG_LEVEL=0 and BUILD_TESTS=ON",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/test",
        "cacheVariables": {
            "EV_LOG_LEVEL": "1",
            "BUILD_TESTS": "ON",
            "CMAKE_BUILD_TYPE": "Debug"
        }
    },
    {
        "name": "release",
        "displayName": "Release build",
        "description": "Configure for a release build",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/release",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release",
            "EV_LOG_LEVEL": "2",
            "BUILD_TESTS": "OFF"
        }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    }
    ,
    {
      "name": "test",
      "configurePreset": "test",
      "description": "Build then run tests (configure uses debug preset with BUILD_TESTS=ON)"
    }
  ]
}
